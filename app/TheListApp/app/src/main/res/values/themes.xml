<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ListThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/colorSecondary</item>
        <item name="colorControlActivated">@color/colorSecondaryDark</item>
        <item name="colorControlHighlight">@color/colorSecondaryLight</item>
        <item name="windowActionModeOverlay">true</item>
        <!--<item name="android:windowBackground">@color/colorPrimaryDark</item>-->
    </style>

    <style name="ListTheme" parent="ListThemeBase">
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:buttonStyle">@style/raised_button</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:spinnerStyle">@style/Widget.AppCompat.Spinner</item>
    </style>

    <style name="ListThemeStatus" parent="ListTheme">
        <!--Temporary fix For Android 5.0 status bar problems-->
    </style>

    <!--<style name="ListThemeTransparentActionBar" parent="ListTheme">-->
        <!--<item name="android:actionBarStyle">@style/ActionBarTransparent</item>-->
    <!--</style>-->

    <style name="ListThemeNoActionBar" parent="ListTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>



</resources>