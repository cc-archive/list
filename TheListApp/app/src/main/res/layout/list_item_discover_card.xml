<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="0dp"
        android:layout_marginLeft="-5dp"
        android:layout_marginRight="-5dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include layout="@layout/toolbar_card_top"
                android:id="@+id/discover_card_header"/>

            <ImageView
                android:id="@+id/discover_card_photo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/discover_card_header"/>

            <RelativeLayout
                android:id="@+id/discover_card_body_text"
                android:layout_below="@+id/discover_card_photo"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/discover_card_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description of the photo in question"
                    android:textColor="@color/primary_text_default_material_light"
                    android:paddingBottom="4dp"/>
                <TextView
                    android:id="@+id/discover_card_requestedby"
                    android:layout_below="@+id/discover_card_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="requested by this person"
                    android:textColor="@color/secondary_text_material_light" />

            </RelativeLayout>

            <include layout="@layout/toolbar_card_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/discover_card_body_text" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
